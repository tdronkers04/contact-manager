<div class="modal-inner">
  {{#if full_name}}
  <h3>Edit Contact:</h3>
  {{else}}
  <h3>Create New Contact:</h3>
  {{/if}}
  <form id="contact-form">
    {{#if full_name}}
    <div class="'form-field">
      <label for="full_name">Full Name: </label>
      <input type="text" pattern="([a-zA-Z]+)(\s)([a-zA-Z]+)" title="first_name last_name, separated by a single space"
        name="full_name" id="full_name" value="{{full_name}}" required>
    </div>
    <div class="form-field">
      <label for="email">e-mail Address: </label>
      <input type="email" name="email" id="email" value="{{email}}" required>
    </div>
    <div class="form-field">
      <label for="phone_number">Phone Number: </label>
      <input type="tel" pattern="^(1|\+1)?(\(|-)?(\d{3})(\)|-)?(\d{3})(-)?(\d{4})$" title="US Phone numbers only"
        name="phone_number" id="phone_number" value="{{phone_number}}" required>
    </div>
    {{else}}
    <div class="'form-field">
      <label for="full_name">Full Name: </label>
      <input type="text" pattern="([a-zA-Z]+)(\s)([a-zA-Z]+)" title="first_name last_name, separated by a single space"
        placeholder="first last" name="full_name" id="full_name" required>
    </div>
    <div class="form-field">
      <label for="email">e-mail Address: </label>
      <input type="email" placeholder="name@domain.com" name="email" id="email" required>
    </div>
    <div class="form-field">
      <label for="phone_number">Phone Number: </label>
      <input type="tel" pattern="^(1|\+1)?(\(|-)?(\d{3})(\)|-)?(\d{3})(-)?(\d{4})$" title="US Phone numbers only"
        placeholder="(***)***-****" name="phone_number" id="phone_number" required>
    </div>
    {{/if}}
    <div class="form-field" id="tag-options"></div>
    <input class="submit" type="submit" value="Submit">
  </form>
</div>